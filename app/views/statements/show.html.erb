<div class="container" data-content="statement">
  <div class="section">
    <div class="columns">
      <div class="column">
        <h1 class="title is-3 is-marginless"><%= link_to @statement.company.name, @statement.company, {'data-content': "company-name"} %></h2>
        <h3 class="title is-3 is-marginless">
          <span class="tag is-dark-navy"><%= @statement.country_name %></span>
          <span class="tag is-dark-navy"><%= @statement.sector_name %></span>
        </h3>
        <h3 class="title is-5">
          <% if @statement.broken_url && admin? %>
            <%= image_tag('broken-link.png', size: '24') %>
          <% end %>
          Date added: <%= @statement.date_seen.strftime('%d %B %Y') %>
        </h3>
        <% if admin? %>
          <%= link_to('Edit', edit_company_path(@statement.company)) %>
        <% end %>
        <% if @statement.verified_by %>
          <p>Authenticated by <span data-content="verified_by"><%= @statement.verified_by.name %></span></p>
        <% else %>
          <p><span data-content="published">Draft</span></p>
        <% end %>
      </div>
      <% if admin? %>
        <div class="column">
          <div class="columns">
            <div class="column">
              <span class="label">Contributed by</span>
            </div>
            <div class="column" data-content="contributed_by">
              <%= @statement.contributed_by.name %>
            </div>
          </div>
          <div class="columns">
            <div class="column">
              <span class="label">Signed by Director</span>
            </div>
            <div class="column">
              <%= yes_no(@statement.signed_by_director) %>
            </div>
          </div>
          <div class="columns">
            <div class="column">
              <span class="label">Approved by Board</span>
            </div>
            <div class="column">
              <%= yes_no_not_explicit(@statement.approved_by_board) %>
            </div>
          </div>
          <div class="columns">
            <div class="column">
              <span class="label">Link on Front page</span>
            </div>
            <div class="column">
              <%= yes_no(@statement.link_on_front_page) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="browser-wrapper">
      <div class="browser-navigation-bar">
        <i class="top-bar"></i>
        <i class="top-bar"></i>
        <i class="top-bar"></i>
        <%= link_to(@statement.url, @statement.url, class: 'url') %>
      </div>

      <div class="browser-container">
        <iframe src="<%= @statement.url %>" frameborder="0"></iframe>
      </div>
    </div>
  </div>
</div>
