<%= form_for [:admin, call_to_action] do |f| %>

  <div class="box">
    <div class="field">
      <%= f.label :title, class: 'label' %>
      <p class="control">
        <%= f.text_field :title, class: 'input' %>
      </p>
    </div>

    <div class="field">
      <%= f.label :button_text, class: 'label' %>
      <p class="control">
        <%= f.text_field :button_text, class: 'input' %>
      </p>
    </div>

    <div class="field">
      <%= f.label :url, class: 'label' %>
      <p class="control">
        <%= f.text_field :url, class: 'input' %>
      </p>
    </div>

    <div class="field">
      <%= f.label :body, class: 'label' %>
      <p class="control">
        <%= f.text_area :body, class: 'form-control', rows: '3', cols: '80' %>
      </p>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= f.submit class: 'button is-primary' %>
      </div>
      <div class="control">
        <%= link_to 'Cancel', [:admin, :call_to_actions], class: 'button' %>
      </div>
    </div>
  </div>

<% end %>
