<header class="is-dark-navy">
  <div class="container">
    <nav class="navbar is-dark-navy">
      <div class="navbar-brand">
        <a href="/" class="navbar-item">
          <%= image_tag 'logo.png', alt: "Modern Slavery Registry" %>
        </a>

        <div class="navbar-burger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div class="navbar-menu">
        <div class="navbar-start"></div>
        <div class="navbar-end">
          <% header_nav_links.each do |title, path| %>
             <%= link_to title, path, class: 'navbar-item' %>
          <% end %>
        </div>
      </div>

    </nav>

    <div class="container has-text-centered">
      <% if notice %>
        <div class="notification is-primary"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="notification is-danger"><%= alert %></div>
      <% end %>
    </div>
  </div>
</header>
