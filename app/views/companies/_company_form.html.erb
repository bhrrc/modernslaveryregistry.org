      <h2><%= pluralize(company.errors.count, "error") %> prohibited this statement from being saved:</h2>

      <ul data-content="validation_errors">
      <% company.errors.full_messages.each do |msg| %>
        <li data-content="validation_error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render partial: 'company_fields', locals: { f: f } %>

  <%= f.fields_for :statements do |b| %>
    <%= render partial: 'statements/statement_fields', locals: { f: b } %>
  <% end %>

  <div class="field">
    <p class="control">
      <%= f.button "Submit", class: 'button is-primary' %>
      <%= link_to('Cancel', root_path, class: 'button') %>
    </p>
  </div>
<% end %>
