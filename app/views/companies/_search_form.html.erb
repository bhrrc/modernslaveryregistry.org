<%= form_tag root_path, method: :get do %>

  <div class="columns">
    <div class="column">
      <%=
      select_tag(
        'countries[]',
        options_from_collection_for_select(
          Country.order(:name),
          :id,
          :name,
          params[:countries]
        ),
        {
          include_blank: true,
          multiple: true,
          class: 'chosen-select',
          'data-placeholder': 'All countries'
        }
      )
      %>
    </div>
    <div class="column">
      <%=
      select_tag(
        'sectors[]',
        options_from_collection_for_select(
          Sector.order(:name),
          :id,
          :name,
          params[:sectors]
        ),
        {
          include_blank: true,
          multiple: true,
          class: 'selectize-select',
          placeholder: 'All sectors'
        }
      )
      %>
    </div>
    <div class="column">
      <div class="field has-addons">
        <p class="control is-expanded">
          <%= text_field_tag :company_name, params[:company_name], class: 'input is-medium',
              placeholder: 'Company' %>
        </p>
        <p class="control">
          <%= submit_tag 'Search', class: "button is-info is-medium" %>
        </p>
      </div>
    </div>
  </div>

<% end %>
