files:
  "/etc/nginx/conf.d/01_proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      proxy_set_header X-Request-Start "t=${msec}";
      send_timeout            600;
      proxy_connect_timeout   600;
      proxy_read_timeout      600;
      proxy_send_timeout      600;
      keepalive_timeout       600;

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
